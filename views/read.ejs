<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-700 p-10 text-white">
        <div class="nav mb-10">
            <a href="/">Back To Home</a>
        </div>
        <h1 class="text-3xl mb-3 tracking-tighter">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
            <% if(users.length >0) { %>
                <% users.forEach(function(user) { %>
                    <div class="user w-72 p-4 bg-zinc-600">
                        <div class="w-full h-52 bg-zinc-500 rounded-lg overflow-hidden">
                            <img class="w-full h-full object-cover" src="<%= user.image %>" alt="image">
                        </div>
                        <h3 class="mt-3 text-xl tracking-tighter"><%= user.name %></h3>
                        <h5 class="text-zinc-400"><%= user.email %></h5>
                        <div class="flex gap-3 mt-5">
                            <a class="text-zinc-200" href="/edit/<%= user._id %>">Edit User</a>
                            <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-zinc-100">No User</h3>
            <% } %>
            
        </div>
    </div>
</body>
</html>
